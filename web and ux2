<script>
/* ======== CANVAS ANIMATED GRADIENT WAVES ======== */
const canvas = document.getElementById("bg");
const ctx = canvas.getContext("2d");
let w, h, t = 0;

function resize() {
    w = canvas.width = window.innerWidth;
    h = canvas.height = window.innerHeight;
}
window.addEventListener("resize", resize);
resize();

function draw() {
    ctx.clearRect(0, 0, w, h);
    t += 0.015;

    for (let i = 0; i < 3; i++) {
        ctx.beginPath();
        const grad = ctx.createLinearGradient(0, 0, w, h);
        grad.addColorStop(0, `hsla(${200 + i * 40}, 70%, 70%, 0.3)`);
        grad.addColorStop(1, `hsla(${300 + i * 30}, 70%, 50%, 0.2)`);
        ctx.fillStyle = grad;

        const amplitude = 40 + i * 25;
        const offset = i * 50;
        ctx.moveTo(0, h / 2);

        for (let x = 0; x < w; x += 10) {
            const y = h / 2 + Math.sin(x * 0.008 + t + offset) * amplitude;
            ctx.lineTo(x, y);
        }

        ctx.lineTo(w, h);
        ctx.lineTo(0, h);
        ctx.closePath();
        ctx.fill();

        // Add glowing highlight
        ctx.shadowBlur = 25;
        ctx.shadowColor = `hsla(${250 + i * 30}, 80%, 70%, 0.7)`;
        ctx.fill();
    }

    requestAnimationFrame(draw);
}

draw();
</script>

